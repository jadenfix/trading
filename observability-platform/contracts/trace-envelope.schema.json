{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://trading.local/schemas/trace-envelope.schema.json",
  "title": "TraceEnvelope",
  "type": "object",
  "required": [
    "trace_id",
    "source_bot",
    "status"
  ],
  "properties": {
    "trace_id": {
      "type": "string"
    },
    "workflow_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "source_bot": {
      "type": "string"
    },
    "mode": {
      "type": [
        "string",
        "null"
      ]
    },
    "ts_start": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "ts_end": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": [
        "running",
        "awaiting_approval",
        "approved",
        "completed",
        "executed",
        "failed",
        "canceled_soft",
        "canceled_hard"
      ]
    },
    "state": {
      "type": "string"
    },
    "runtime_state": {
      "type": "string",
      "enum": [
        "PROCESS_RUNNING",
        "PROCESS_STOPPED",
        "UNKNOWN"
      ]
    },
    "requires_approval": {
      "type": "boolean"
    },
    "approval": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": true
    },
    "event_count": {
      "type": "integer",
      "minimum": 0
    },
    "executed_trade_count": {
      "type": "integer",
      "minimum": 0
    },
    "cancel_state": {
      "type": "string"
    },
    "control_locked": {
      "type": "boolean"
    },
    "available_actions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": true
}
