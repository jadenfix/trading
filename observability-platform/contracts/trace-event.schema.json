{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://trading.local/schemas/trace-event.schema.json",
  "title": "TraceEvent",
  "type": "object",
  "required": [
    "trace_id",
    "span_id",
    "kind",
    "payload"
  ],
  "properties": {
    "trace_id": {
      "type": "string"
    },
    "span_id": {
      "type": "string"
    },
    "parent_span_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "kind": {
      "type": "string"
    },
    "ts": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "severity": {
      "type": "string",
      "enum": [
        "info",
        "warn",
        "error"
      ]
    },
    "payload": {
      "type": "object",
      "additionalProperties": true
    },
    "source_file": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "additionalProperties": false
}
